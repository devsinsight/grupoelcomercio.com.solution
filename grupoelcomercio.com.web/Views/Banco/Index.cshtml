@model grupoelcomercio.com.web.Models.BancoViewModel
@{
    ViewBag.Title = "Registro de Bancos";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Registro de Banco</h2>
@using (Ajax.BeginForm("Registrar", "Banco", null, new AjaxOptions() {
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "resultTarget" }, new { @id = "registro-banco" }))
{

    <div class="form-group">
      
        @Html.LabelFor(x => x.NombreBanco)
        @Html.TextBoxFor(x => x.NombreBanco, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.NombreBanco, "Debe ingresar un nombre", new { @class = "has-error" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.DireccionBanco)
        @Html.TextAreaFor(x => x.DireccionBanco, new { @class = "form-control" })
    </div>

    <input type="submit" class="btn btn-default" value="Registrar" />

}

<div id="resultTarget"></div>

